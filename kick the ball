import pygame
import sys

# Inisialisasi Pygame
pygame.init()

# Ukuran layar
screen_width = 800
screen_height = 600
screen = pygame.display.set_mode((screen_width, screen_height))
pygame.display.set_caption("Tendang Bola Mini Game")

# Warna
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
BLUE = (0, 0, 255)

# Variabel pemain
player_width = 100
player_height = 20
player_x = (screen_width - player_width) // 2
player_y = screen_height - player_height - 10

# Variabel bola
ball_radius = 10
ball_x = screen_width // 2
ball_y = screen_height // 2
ball_speed_x = 5
ball_speed_y = 5

# Fungsi untuk menggambar pemain dan bola
def draw_objects():
    screen.fill(WHITE)
    pygame.draw.rect(screen, BLACK, (player_x, player_y, player_width, player_height))
    pygame.draw.circle(screen, BLUE, (ball_x, ball_y), ball_radius)

# Main game loop
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    
    # Pergerakan pemain
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and player_x > 0:
        player_x -= 5
    if keys[pygame.K_RIGHT] and player_x < screen_width - player_width:
        player_x += 5

    # Pergerakan bola
    ball_x += ball_speed_x
    ball_y += ball_speed_y

    # Deteksi tabrakan bola dengan tepi layar
    if ball_x <= 0 or ball_x >= screen_width:
        ball_speed_x = -ball_speed_x
    if ball_y <= 0 or ball_y >= screen_height:
        ball_speed_y = -ball_speed_y

    # Deteksi tabrakan bola dengan pemain
    if ball_y + ball_radius >= player_y and ball_x >= player_x and ball_x <= player_x + player_width:
        ball_speed_y = -ball_speed_y

    # Deteksi gol
    if ball_y <= 0:
        print("GOL!")
        ball_x = screen_width // 2
        ball_y = screen_height // 2

    # Gambar objek
    draw_objects()

    # Update layar
    pygame.display.update()

    # FPS
    pygame.time.Clock().tick(60)

# Keluar dari Pygame
pygame.quit()
sys.exit()
